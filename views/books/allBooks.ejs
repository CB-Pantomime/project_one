<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
<body>
    <%- include('../partials/nav.ejs') %>
    <h1>All Books Page</h1>


    
    <div class="control">
        <a class="button is-info" href="/all-books/new-book">New Book</a>
    </div>
    
    <div>
        <div class='userReviews'>
            <% for(let i = 0; i < books.length; i++) { %>
            <div class="card" style="width: 12rem;">
                <% const book = books[i]; %>
                <img  src="<%= book.image %>" alt="Book Image"  class="card-img-top" alt="...">

                <div class="card-body">
                    <h4>
                        <a href="/all-books/<%= book.id %>">
                            <%= book.title %>
                        </a>
                    </h4>
                    <h6>
                        <%= book.author %>
                    </h6>
                    <p>
                        $<%= book.price %>
                    </p>
                </div>
            </div>
            <% } %>
        </div>
    </div>
            
        

    

    <%- include('../partials/footer.ejs') %>
</body>
</html>

