<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
<body>
    <%- include('./partials/nav.ejs') %>

    <h1>Edit Book Page</h1>
    
    <form action="/all-books/<%=book.id %>?_method=PUT" method="POST">
        <div class="field">
          <label class="label">Title</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="title"
              name="title"
              value="<%= book.title %> "
            />
          </div>
        </div>

        <div class="field">
            <label class="label">Author</label>
            <div class="control">
              <input
                class="input"
                type="text"
                placeholder="author"
                name="author"
                value="<%= book.author %> "
              />
            </div>
          </div>

        <div class="field">
          <label class="label">Price</label>
          <div class="control">
            <input
              class="input"
              type="number"
              placeholder="price"
              name="price"
              value="<%= book.price %>"
            />
          </div>
        </div>

        <div class="field">
          <label class="label">Image</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="http://"
              name="image"
              value="<%= book.image %> "
            />
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <a class="button is-info" href="/all-books/<%= book.id %> "
              >Cancel</a
            >
            <button class="button is-success">Edit Book</button>
          </div>
        </div>
      </form>
      <%- include('./partials/footer.ejs') %>
</body>
</html>